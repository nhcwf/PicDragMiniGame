<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_green"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_imported_image"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="48dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/iv_remove_image"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="5dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_menu_delete" />

    <GridLayout
        android:id="@+id/gl_dropbox_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:columnCount="3"
        android:gravity="center"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/iv_dropbox_1"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:layout_margin="10dp"
            android:background="@color/light_green"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/iv_dropbox_2"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:layout_margin="10dp"
            android:background="@color/light_green"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/iv_dropbox_3"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:layout_margin="10dp"
            android:background="@color/light_green"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/iv_dropbox_4"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:layout_margin="10dp"
            android:background="@color/light_green"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/iv_dropbox_5"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:layout_margin="10dp"
            android:background="@color/light_green"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/iv_dropbox_6"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:layout_margin="10dp"
            android:background="@color/light_green"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/iv_dropbox_7"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:layout_margin="10dp"
            android:background="@color/light_green"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/iv_dropbox_8"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:layout_margin="10dp"
            android:background="@color/light_green"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/iv_dropbox_9"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:layout_margin="10dp"
            android:background="@color/light_green"
            android:scaleType="fitCenter" />


    </GridLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="48dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_add_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/orange"
            android:text="@string/title_add_image" />

        <Button
            android:id="@+id/btn_finish"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/orange"
            android:text="@string/title_finish" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="218dp"
        android:layout_height="81dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/iv_remove_image"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_corner_light_green"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal|bottom"
            android:textColor="#DADDB1"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="32dp"
            android:background="@drawable/rounded_corner_light_green"
            android:textAlignment="center"
            android:textColor="#DADDB1"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="180dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gl_dropbox_container">

        <ImageView
            android:id="@+id/iv_surender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_myplaces" />

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textColor="@color/light_yellow" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>